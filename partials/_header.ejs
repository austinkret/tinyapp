<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (userid) { %>
      <h6 class="card-title" style="padding-right: 15px; padding-top: 12px; color: rgba(226, 226, 226, 0.445)">Logged in
        as: <%= users[userid].email %>
      </h6>
      <form class="form-inline" method="POST" action="/logout" style="padding-top: 15px; padding-right: 15px">
        <div class=" input-group mb-3">
          <button type="submit" class="btn btn-outline-light" type="button">Logout</button>
        </div>
      </form>
      <% } else { %>
        <form class="form-inline" method="GET" action="/register" style="padding-top: 15px; padding-right: 15px">
          <div class="input-group mb-3">
            <button type="submit" class="btn btn-outline-light" type="button">Register</button>
          </div>
        </form>
        <form class="form-inline" method="GET" action="/login" style="padding-top: 15px;">
          <div class=" input-group mb-3">
            <button type="submit" class="btn btn-light" type="button">Login</button>
          </div>
        </form>
        <% } %>
  </nav>
</header>